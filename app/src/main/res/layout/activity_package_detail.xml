<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 tools:context="com.example.rafaelanastacioalves.moby.entitydetailing.EntityDetailActivity">

	<android.support.design.widget.AppBarLayout
		android:id="@+id/detail_entity_name_detail_appbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:elevation="@dimen/material_appbar_elevation"
		android:theme="@style/AppTheme.AppBarOverlay">

		<android.support.v7.widget.Toolbar
			android:id="@+id/detail_toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			app:popupTheme="@style/AppTheme.PopupOverlay"
			/>


	</android.support.design.widget.AppBarLayout>

	<FrameLayout
		android:id="@+id/package_detail_fragment_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		android:layout_marginBottom="@dimen/fragment_detail_margin_bottom"
		tools:context=".entitydetailing.EntityDetailActivity" />

	<android.support.v7.widget.AppCompatImageView
		android:layout_width="40dp"
		android:id="@+id/previous_music"
		android:layout_height="40dp"
		android:layout_gravity="bottom|left"
		android:layout_marginBottom="@dimen/activity_horizontal_margin"
		android:layout_marginLeft="@dimen/activity_vertical_margin"
		app:srcCompat="@drawable/ic_previous"/>

	<android.support.v7.widget.AppCompatImageView
		android:layout_width="40dp"
		android:id="@+id/next_music"
		android:layout_height="40dp"
		android:layout_gravity="bottom|right"
		android:layout_marginRight="@dimen/activity_vertical_margin"
		android:layout_marginBottom="@dimen/activity_horizontal_margin"
		app:srcCompat="@drawable/ic_next"/>





</android.support.design.widget.CoordinatorLayout>



